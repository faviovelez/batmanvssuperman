<div class="superman-form">
  <%= form_for(@superhero, url: pages_batman_vs_superman_post_path, method: 'post') do |f| %>
    <label for='email_batman'>Correo Electrónico</label>
    <%= f.text_field :email_batman, id: 'email_batman' %>
    <button type="submit" class="btn">Voto por Batman</button>
  <% end %>
</div>

<div class="batman-form">
<%= form_for(@superhero, url: pages_batman_vs_superman_post_path, method: 'post') do |f| %>
  <label for='email_superman'>Correo Electrónico</label>
  <%= f.text_field :email_superman, id: 'email_superman' %>
  <button type="submit" class="btn">Voto por Superman</button>
<% end %>
</div>
